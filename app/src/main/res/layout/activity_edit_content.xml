<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/select_activity_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/desc_activity_name" />

    <EditText
        android:id="@+id/edit_activity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/desc_activity_hint"
        android:inputType="textCapWords|textAutoCorrect"
        android:maxLines="1"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:focusedByDefault="true"/>

    <TextView
        android:id="@+id/edit_activity_color_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/desc_activity_color" />

    <ImageView
        android:id="@+id/edit_activity_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:minHeight="50dp"
        android:minWidth="50dp" />
    <!-- TODO: add color picker e. g. from https://github.com/jaredrummler/ColorPicker to select the activity color -->
    <!-- TODO: edit conditions here -->

</LinearLayout>